#!/bin/bash

set -ex

# Download the test roms
$( dirname $0 )/library/download_test_roms

CHANGES=$( git diff )
if [ "$CHANGES" != "" ]; then
    echo "Untracked Changes"
    exit 1;
fi;

cargo build --all-features --release
cargo build --release

pushd library
cargo build --no-default-features
popd

cargo test --release

pushd web
wasm-pack build
popd

./pico/build.sh
