#!/bin/bash

sudo apt-get update
sudo apt-get install --yes \
    clang \
    gcc-arm-none-eabi \
    libasound2-dev \
    libclang-dev \
    libsdl2-dev \
    libudev-dev \
    llvm-dev \
    npm \
    wget

library/download_test_roms

if ! which wasm-bindgen; then
    cargo install wasm-bindgen-cli
fi

if ! which wasm-opt; then
    cargo install wasm-opt
fi
